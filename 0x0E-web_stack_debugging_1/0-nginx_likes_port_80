#!/usr/bin/env bash

# Update the system and install Nginx
apt-get update
apt-get install -y nginx

# Ensure Nginx is running
service nginx start

# Find the Nginx configuration file
nginx_conf="/etc/nginx/sites-available/default"

# Update the configuration to listen on port 80
sed -i 's/listen 80 default_server;/listen 80;/g' "$nginx_conf"

# Restart Nginx to apply the changes
service nginx restart

# Output a message indicating success
echo "Nginx configured to listen on port 80."

